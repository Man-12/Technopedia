<% if(tech != '') {%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/">Home</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page"><%- tech.name %></li>
  </ol>
</nav>

<div class="row">
  <div class="col-12 col-md-4">
    <img
      src="/uploads/<%- tech.image %>"
      class="img-fluid sticky-top"
      style="top: 20px"
      alt="<%- tech.name %>"
      loading="lazy"
    />
  </div>

  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12">
        <h1><%- tech.name %></h1>
      </div>
      <div class="col-12 mb-4">
        <i class="bi bi-tag"></i><%- tech.category %>
      </div>
      <div class="col-12" style="white-space: pre-line">
        <h4>Introduction</h4>
        <%- tech.desciption %>
      </div>
    </div>
    <div class="row pt-4">
      <div class="col-12">
        <h4>References</h4>
        <ol class="list-group list-group-numbered">
          <% tech.references.forEach(function(item, index){ %>
          <li class="list-group-item">
            <a href="<%= item %>" target="_blank"><%= item %></a>
          </li>
          <% }) %>
        </ol>
      </div>
    </div>
  </div>
</div>

<% } else {%>
<p>No item found.</p>
<% } %>
